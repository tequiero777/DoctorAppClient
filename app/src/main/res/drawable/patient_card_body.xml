<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item 
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
		    <corners 
		       android:radius="8dp"
		       />
		    
		    <solid android:color="#E8EAE9"/>
		    <stroke android:width="1dp" android:color="#E8EAE9"/>
	    </shape>
 	</item>
 	<item 
 	    android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
		    <corners 
		       android:radius="8dp"
		       />
		    
		    <solid android:color="#FFFFFF"/>
		    <stroke android:width="1dp" android:color="#FFFFFF"/>
	    </shape>
 	</item>
    
</layer-list>
