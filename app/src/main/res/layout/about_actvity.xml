<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/biaoti"/>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <TextView 
            android:id="@+id/versions_title"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="移动医生手机客户端"
	        android:textSize="20sp"
	        android:textColor="@color/black"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="10dp"/>
	    <TextView 
	        android:id="@+id/versions_no"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text=""
	        android:textSize="14sp"
	        android:layout_below="@+id/versions_title"
	        android:layout_marginBottom="20dp"/>
	    <ImageView 
	        android:id="@+id/versions_image"
	        android:layout_width="400dp"
	        android:layout_height="300dp"
	        android:src="@drawable/barcode_test"
	        android:layout_gravity="center"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/versions_no"
	        android:layout_marginLeft="60dp"
	        android:layout_marginRight="60dp"/>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="连接外网，扫描二维码，您的同事也可以下载移动医生手机客户端"
	        android:textSize="18sp"
	        android:layout_marginTop="10dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:layout_below="@+id/versions_image"
	        android:lineSpacingMultiplier="1.3"/>
	    
	     <TextView 
	        android:id="@+id/versions_groupname"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="北京天健源达科技有限公司"
	        android:textSize="15sp"
	        android:textColor="@color/gray"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="20dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"/>
	     
	     <TextView 
	        android:id="@+id/versions_copyright"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Copyright ©2016-2020"
	        android:textSize="15sp"
	        android:textColor="@color/gray"
	        android:layout_above="@+id/versions_groupname"
	        android:layout_marginTop="20dp"/>
    </RelativeLayout>
    
    
</LinearLayout>
