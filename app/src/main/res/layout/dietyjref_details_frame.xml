<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg_color">
        <ImageButton android:id="@+id/back_parent"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:background="@drawable/back_white"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="15dp"/>
        <TextView android:id="@+id/disease_title_name"
            android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textSize="18sp"
	        android:textColor="@color/white"
	        android:layout_centerInParent="true"
	        android:singleLine="true"
	        android:ellipsize="middle"
	        android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">        
	    </TextView>
    </RelativeLayout>
	<LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
	    <TabWidget
	        android:id="@+id/tabWidget4"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:gravity="right|center_vertical" />
		<TextView android:id="@+id/tab_scroll_border"
		    android:layout_width="wrap_content"
		    android:layout_height="2dp"
		    android:background="@color/tab_border_color">
		    
		</TextView>
	    <android.support.v4.view.ViewPager
	        android:id="@+id/viewPager4"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/white" />  
	    
	</LinearLayout>
	
</LinearLayout>
