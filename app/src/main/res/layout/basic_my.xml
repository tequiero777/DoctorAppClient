<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2c65ee"
        android:gravity="center"
        android:padding="10dp"
        android:text="个人中心"
        android:textColor="@color/white"
        style="@style/basc_menu_text_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/personalInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_personinfo"
                android:background="@drawable/home_title_background" >

                <com.doctorapp.basic.ui.view.RoundImageView
                    android:id="@+id/personal_head_imge"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:src="@drawable/sex_man_default"
                    imagecontrol:border_inside_color="#fff7f2e9"
                    imagecontrol:border_outside_color="#ffd5d1c8"
                    imagecontrol:border_thickness="0dp" />

                <ImageView
                    android:id="@+id/moreinfo_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/formoreinfo_image_selector" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/moreinfo_image"
                    android:layout_toRightOf="@+id/personal_head_imge"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/cellphone_number"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </RelativeLayout>

