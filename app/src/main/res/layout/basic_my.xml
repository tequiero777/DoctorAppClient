            <RelativeLayout
                android:id="@+id/bindPid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_border_shape" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/formoreinfo_iamge_selector_positive" />

                <ImageView
                    android:id="@+id/item_image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bingno" />

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/item_image8"
                    android:text="绑定就诊号"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comm_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_border_shape" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/formoreinfo_iamge_selector_positive" />

                <ImageView
                    android:id="@+id/item_image_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/help_menu" />

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/item_image_other"
                    android:text="常用就诊人"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/repairePwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_border_shape" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/formoreinfo_iamge_selector_positive" />

                <ImageView
                    android:id="@+id/item_image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/update_password" />

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/item_image7"
                    android:text="修改密码"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_border_shape" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/formoreinfo_iamge_selector_positive" />

                <ImageView
                    android:id="@+id/item_image_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/notify_msg" />

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/item_image_setting"
                    android:text="设置中心"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <Button
                    android:id="@+id/login_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/login_out_btn_selector"
                    android:text="退出"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>