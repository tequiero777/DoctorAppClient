<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>
    
    <declare-styleable name="drop_down_list_attr">
        <attr name="isDropDownStyle" format="boolean" />
        <attr name="isOnBottomStyle" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="ProgressWheel">
	        <attr name="text" format="string" />
	        <attr name="textSize" format="dimension" />
	        <attr name="textColor1" format="color" />
	        <attr name="barColor" format="color" />
	        <attr name="rimColor" format="color" />
	        <attr name="rimWidth" format="dimension" />
	        <attr name="spinSpeed" format="dimension" />
	        <attr name="delayMillis" format="integer" />
	        <attr name="circleColor" format="color" />
	        <attr name="pw_radius" format="dimension" />
	        <attr name="barWidth" format="dimension" />
	        <attr name="barLength" format="dimension" />
	        <attr name="contourColor" format="color"/>
	        <attr name="contourSize" format="dimension"/>
	    </declare-styleable> 
	 <declare-styleable name="CustomerGridView">   
	 	<attr name="mnumColumns" format="integer" />
	 </declare-styleable>
	 
	 <declare-styleable name="TitleIndicator">
        <attr name="titlePadding" format="dimension" />
        <!-- Left/right padding of not active view titles. -->
        <attr name="clipPadding" format="dimension" />
        <attr name="textColor" format="color|reference" />
        <attr name="textSizeNormal" format="dimension" />
        <attr name="textSizeSelected" format="dimension" />
        <attr name="footerLineHeight" format="dimension" />
        <attr name="footerColor" format="color" />
        <attr name="footerTriangleHeight" format="dimension" />
    </declare-styleable>
</resources>
